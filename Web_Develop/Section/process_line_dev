<style>
  /* 타임라인 섹션의 배경과 정렬 설정 */
  .EUM-timeline-section {
    background-color: #212121; /* 어두운 배경색 */
    height: 0vh; /* 섹션 높이를 0으로 설정 */
    display: flex; /* 플렉스 레이아웃 사용 */
    justify-content: center; /* 수평 중앙 정렬 */
    align-items: center; /* 수직 중앙 정렬 */
  }

  /* 타임라인 컨테이너: 전체 너비를 채움 */
  .EUM-timeline-container {
    width: 100%; /* 가로 너비 100% */
    display: flex; /* 플렉스 정렬 */
    justify-content: center;
    align-items: center;
  }

  /* 타임라인의 라인 컨테이너 */
  .EUM-timeline-line-container {
    position: relative;
    width: 100%; /* 전체 가로 너비 */
    height: 40px; /* 높이 40px */
  }

  /* 기본 회색 타임라인 */
  .EUM-timeline-line {
    position: absolute;
    top: 50%; /* 수직 중앙 정렬 */
    left: 0; /* 왼쪽 정렬 */
    width: 100%;
    height: 4px; /* 두께 4px */
    background-color: #424242;
  }

  /* 주황색 하이라이트 라인 */
  .EUM-highlighted-line {
    position: absolute;
    top: 50%;
    left: 0;
    height: 4px;
    background-color: orange;
    width: 5.5%; /* 초기 넓이 */
    transition: width 0.5s ease; /* 부드러운 전환 */
  }

  /* 타임라인의 동그라미 */
  .EUM-circle {
    position: absolute;
    top: 50%;
    width: 12px;
    height: 12px;
    background-color: #424242;
    border-radius: 50%;
    cursor: pointer;
  }

  /* 주황색으로 변경된 동그라미 */
  .EUM-circle.passed {
    background-color: orange;
  }

  /* 활성화된 동그라미에 애니메이션 추가 */
  .EUM-circle.active {
    background-color: orange;
    animation: smoothPulse 1.5s infinite;
  }

  /* 부드럽게 반짝이는 애니메이션 */
  @keyframes smoothPulse {
    0%, 100% {
      box-shadow: 0 0 15px 3px rgba(255, 165, 0, 0.8);
    }
    50% {
      box-shadow: 0 0 25px 6px rgba(255, 165, 0, 0.6);
    }
  }

  /* 갤러리 스타일 */
  .EUM-gallery {
    display: flex;
    overflow: hidden;
    width: 100%;
    height: 300px;
    margin-top: 100px;
    background-color: #333;
    border-radius: 40px;
  }

  /* 갤러리 슬라이드 */
  .EUM-gallery-slide {
    min-width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transition: transform 0.5s ease-in-out;
  }

  .EUM-gallery-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 40px;
  }

  .EUM-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    font-size: 32px;
  }
</style>

<script>
  // 요소 선택 및 변수 정의
  const circles = document.querySelectorAll(".EUM-circle");
  const slides = document.querySelectorAll(".EUM-gallery-slide");
  const leftArrow = document.querySelector(".left-arrow");
  const rightArrow = document.querySelector(".right-arrow");
  let currentStep = 0;

  // 슬라이드 표시 함수
  function showSlide(index) {
    slides.forEach((slide, i) => {
      slide.style.transform = `translateX(${(i - index) * 100}%)`;
    });
  }

  // 하이라이트 업데이트
  function updateHighlight(step) {
    circles.forEach((circle, index) => {
      circle.classList.toggle("passed", index < step);
      circle.classList.toggle("active", index === step);
    });
  }

  // 슬라이드 변경
  function changeSlide(newStep) {
    currentStep = newStep;
    showSlide(currentStep);
    updateHighlight(currentStep);
  }

  leftArrow.addEventListener("click", () => {
    const newStep = (currentStep - 1 + slides.length) % slides.length;
    changeSlide(newStep);
  });

  rightArrow.addEventListener("click", () => {
    const newStep = (currentStep + 1) % slides.length;
    changeSlide(newStep);
  });

  showSlide(currentStep);
  updateHighlight(currentStep);
</script>
